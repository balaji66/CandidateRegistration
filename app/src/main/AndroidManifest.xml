<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="balaji66.com.candidateregistration">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignInActivity" />
        <activity android:name=".CandidateRegistrationActivity" />
        <activity android:name=".CandidateLoginActivity" />
        <activity
            android:name=".EditDetailsActivity"
            android:label="@string/title_activity_edit_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RecordAudioActivity" />
        <activity android:name=".RecordingListActivity" />

        <service
            android:name=".MyService"
            android:enabled="true" />

        <activity android:name=".QrScanActivity" />
        <activity android:name=".RegisterWithImage">

        </activity>
        <activity android:name=".SampleDetails"></activity>
    </application>

</manifest>